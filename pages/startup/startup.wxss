/* pages/startup/startup.wxss */
.startup {
  height: 100%;
  width: 100%;
  position: relative;
}

.startup-card {
  position: absolute;
  top: 20%;
  width: 70%;
  height: 50%;
  margin: 0 10%;
  padding: 5% 5% 10% 5%;
  background: rgb(255, 255, 255, 0.9);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

