.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 70rpx;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}